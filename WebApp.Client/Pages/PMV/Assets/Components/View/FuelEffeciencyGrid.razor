@using WebApp.Client.Pages.PMV.Assets.Models;
@using WebApp.Client.Pages.PMV.Assets.ViewModels;


@inherits ComponentViewModelBase<AssetReadViewModel>

<RadzenDataGrid TItem="AssetFuelEfficiencyModel" 
    Data="Model.Asset.EfficiencyList.ToList()"
                AllowPaging="true" PageSize="20"
                AllowColumnReorder="true"
                AllowColumnResize="true"
                AllowSorting="true"
                ColumnWidth="200px"
                PageSizeOptions="@pageSizeOptions"
                ShowPagingSummary="true">
    <Columns>
        <RadzenDataGridColumn Width="50px"
                              TItem="AssetFuelEfficiencyModel" Title="#" Filterable="false" Sortable="false" TextAlign="TextAlign.Center">
            <Template Context="data">
                @(Model.Asset.EfficiencyList.ToList().IndexOf(data) + 1)
            </Template>
        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="AssetCode" Title="Asset Code">

        </RadzenDataGridColumn>
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="Location" Title="Fueling Location" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="OnHireTo" Title="On Hire To" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="Station" Title="Fueled By" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="FuelDateTime" Title="Date/Time" FormatString="{0: dd-MMM-yyyy hh:mm tt}" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="Reading" Title="Current SMU (Km.)" FormatString="{0:###,##0}" TextAlign="TextAlign.Right" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="Diff" Title="SMU Diff." FormatString="{0:###,##0}" TextAlign="TextAlign.Right" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="Quantity" Title="Quantity (Ltr)." FormatString="{0:###,##0}" TextAlign="TextAlign.Right" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="LH" Title="L/Hour" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="HL" Title="H/Liter" TextAlign="TextAlign.Center" />
        <RadzenDataGridColumn TItem="AssetFuelEfficiencyModel" Property="DocumentNo" Title="Document No." />


    </Columns>
</RadzenDataGrid>

@code {
    IEnumerable<int> pageSizeOptions = new int[] { 10, 20, 30,50,100 };
}
