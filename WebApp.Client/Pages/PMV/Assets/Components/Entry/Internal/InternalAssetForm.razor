                                    <RadzenDropDown Name="OperatedBy"
                                                    TValue="string"
                                                    TextProperty="Text"
                                                    ValueProperty="Value"
                                                    AllowFiltering=true
                                                    AllowClear=true
                                                    FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive"
                                                    Data="Model.AssetContainer.Companies"
                                                    @bind-Value="Asset.Additional.OperatedBy"
                                                    Disabled="@IsReadOnly" />

                                </CustomField>
                            </RadzenColumn>
                            <RadzenColumn Size=2>
