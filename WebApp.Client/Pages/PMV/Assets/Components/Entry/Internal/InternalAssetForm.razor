                                                      Name="RegistrationExpiry"
                                                      DateFormat="dd-MMM-yyyy"
                                                      AllowClear=true
                                                      @bind-Value="Asset.Additional.RegistrationExpiry"
                                                      Disabled="@IsReadOnly" />
                                </CustomField>
